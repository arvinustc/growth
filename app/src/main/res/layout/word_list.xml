<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".activity.RootActivity"
    android:focusable="true"
    android:baselineAligned="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:gravity="left|bottom"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:gravity="left|bottom"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/book_name"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="book name"
                android:gravity="left|center"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/lesson_name"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="lesson name"
                android:gravity="left|center"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="right|bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/return_back"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:gravity="left"
                android:src="@mipmap/goback" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingLeft="70dp"
        android:gravity="left"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="202dp"
            android:layout_height="208dp"

            android:gravity="center"
            android:background="@android:color/black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/word_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="ç”°"
                android:textSize="@dimen/study_han_size"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="208dp"
            android:gravity="right|bottom"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="48dp"
                    android:gravity="right|center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/word_score_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:src="@mipmap/num_0" />

                    <ImageView
                        android:id="@+id/word_score_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:src="@mipmap/num_1" />

                    <ImageView
                        android:id="@+id/word_score_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:src="@mipmap/num_2" />

                    <ImageView
                        android:id="@+id/word_score_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:src="@mipmap/num_3" />

                    <ImageView
                        android:id="@+id/word_score_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:src="@mipmap/num_4" />

                    <ImageView
                        android:id="@+id/word_score_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:src="@mipmap/num_5" />
                </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>